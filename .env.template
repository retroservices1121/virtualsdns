# ====================================================================
# VirtualsBase Domain Service - Environment Configuration Template
# ====================================================================
# Copy this to .env and fill in your values
# IMPORTANT: Never commit .env to version control!

# === DEPLOYMENT CONFIGURATION ===
PRIVATE_KEY=your_private_key_here
BASESCAN_API_KEY=your_basescan_api_key_here

# === RPC ENDPOINTS ===
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
# Optional: Backup RPC providers for redundancy
ALCHEMY_BASE_URL=https://base-mainnet.g.alchemy.com/v2/your_alchemy_key
INFURA_BASE_URL=https://base-mainnet.infura.io/v3/your_infura_key

# === CONTRACT ADDRESSES ===
# Main registry contract (filled after deployment)
REACT_APP_REGISTRY_ADDRESS=

# Token contracts on Base
REACT_APP_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
REACT_APP_VIRTUAL_ADDRESS=0x0b3e328455c4059eeb9e3f84b5543f74e24e7e1b

# Alternative networks (for testing)
# Testnet addresses
REACT_APP_REGISTRY_ADDRESS_TESTNET=
REACT_APP_USDC_ADDRESS_TESTNET=0x036CbD53842c5426634e7929541eC2318f3dCF7e
REACT_APP_VIRTUAL_ADDRESS_TESTNET=

# === NETWORK CONFIGURATION ===
REACT_APP_NETWORK=base-mainnet
REACT_APP_CHAIN_ID=8453
REACT_APP_RPC_URL=https://mainnet.base.org
REACT_APP_BLOCK_EXPLORER=https://basescan.org

# === DASHBOARD CONFIGURATION ===
REACT_APP_ADMIN_ADDRESS=
REACT_APP_ADMIN_SECRET=your_secure_admin_secret_here
REACT_APP_PREMIUM_NAMES_SECURED=false
REACT_APP_ESTIMATED_PORTFOLIO_VALUE=0

# Dashboard refresh settings
REACT_APP_REFRESH_INTERVAL=30000
REACT_APP_ENABLE_REAL_TIME=true

# === API CONFIGURATION ===
# Price feeds
REACT_APP_PRICE_API_KEY=your_coingecko_api_key
REACT_APP_PRICE_API_URL=https://api.coingecko.com/api/v3
COINMARKETCAP_API_KEY=your_coinmarketcap_key

# Analytics
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_HOTJAR_ID=

# === FRONTEND CONFIGURATION ===
REACT_APP_APP_NAME=VirtualsBase
REACT_APP_DOMAIN_SUFFIX=.virtuals.base
REACT_APP_SUPPORT_EMAIL=support@virtualsbase.com
REACT_APP_LOGO_URL=/logo.png

# SEO & Meta
REACT_APP_APP_DESCRIPTION=The premier domain service for AI agents on Base blockchain
REACT_APP_APP_KEYWORDS=AI domains, Base blockchain, virtual agents, web3 domains
REACT_APP_OG_IMAGE=https://virtualsbase.com/og-image.png

# === FEATURE FLAGS ===
REACT_APP_ENABLE_AUCTIONS=false
REACT_APP_ENABLE_TRANSFERS=true
REACT_APP_ENABLE_TEXT_RECORDS=true
REACT_APP_ENABLE_SUBDOMAINS=false
REACT_APP_MAINTENANCE_MODE=false

# === PRICING CONFIGURATION ===
# Default pricing (can be overridden by contract)
REACT_APP_DEFAULT_ETH_PRICE=0.001
REACT_APP_DEFAULT_USDC_PRICE=5
REACT_APP_DEFAULT_VIRTUAL_PRICE=1000

# === SOCIAL & MARKETING ===
REACT_APP_TWITTER_URL=https://twitter.com/virtualsbase
REACT_APP_DISCORD_URL=https://discord.gg/virtualsbase
REACT_APP_DOCS_URL=https://docs.virtualsbase.com
REACT_APP_GITHUB_URL=https://github.com/retroservices1121/virtualsdns
REACT_APP_TELEGRAM_URL=

# === SECURITY CONFIGURATION ===
# Content Security Policy
REACT_APP_CSP_ENABLED=true
# Rate limiting
REACT_APP_RATE_LIMIT_REQUESTS=100
REACT_APP_RATE_LIMIT_WINDOW=900000

# === BACKUP & MONITORING ===
# Webhook for notifications
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Error tracking
SENTRY_DSN=
REACT_APP_SENTRY_DSN=

# === DEVELOPMENT CONFIGURATION ===
NODE_ENV=development
REACT_APP_DEBUG=false

# Hardhat
REPORT_GAS=false
HARDHAT_NETWORK=localhost
FORK_BASE=false

# Testing
REACT_APP_ENABLE_TEST_MODE=false
REACT_APP_TEST_MNEMONIC=

# === DEPLOYMENT FLAGS ===
# Environment stage
STAGE=development
REACT_APP_STAGE=development

# Deployment info (auto-filled by CI/CD)
REACT_APP_BUILD_NUMBER=
REACT_APP_COMMIT_HASH=
REACT_APP_DEPLOY_TIME=

# === PERFORMANCE OPTIMIZATION ===
# CDN settings
REACT_APP_CDN_URL=
REACT_APP_ENABLE_SW=true

# Caching
REACT_APP_CACHE_DURATION=300000
REACT_APP_ENABLE_OFFLINE=false

# === LEGAL & COMPLIANCE ===
REACT_APP_PRIVACY_POLICY_URL=https://virtualsbase.com/privacy
REACT_APP_TERMS_OF_SERVICE_URL=https://virtualsbase.com/terms
REACT_APP_COOKIE_POLICY_URL=https://virtualsbase.com/cookies

# ====================================================================
# DEPLOYMENT CHECKLIST:
# ====================================================================
# □ 1. Fill in PRIVATE_KEY (deployer wallet)
# □ 2. Get BASESCAN_API_KEY from basescan.org
# □ 3. Deploy contract and fill REACT_APP_REGISTRY_ADDRESS
# □ 4. Set REACT_APP_ADMIN_ADDRESS to your admin wallet
# □ 5. Configure social media URLs
# □ 6. Set up monitoring webhooks
# □ 7. Test on testnet first!
# □ 8. Update STAGE=production for mainnet
